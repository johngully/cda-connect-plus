{
  "manifest_version": 3,
  "name":"CDA Connect Plus",
  "description": "A browser extension that makes using CDA Connect easier",
  "version": "0.1.0",
  "icons": {
    "16": "cda-blue-16.png",
    "32": "cda-blue-32.png",
    "48": "cda-blue-48.png",
    "128": "cda-blue-128.png"
  },
  "action": {
    "name": "CDA Connect Plus",
    "permissions": [ "tabs" ],
    "default_popup": "popup.html"
  },
  "content_scripts":[
    {
      "matches":["*://coramdeoacademy.myschoolapp.com/*"],
      "js":[
        "utils/date.js",
        "utils/html-utils.js",
        "assignments.js",
        "router.js"
      ],
      "css": ["assignments.css"]
    },
    {
      "matches":["*://coramdeoacademy.myschoolapp.com/*?pl=*"],
      "js": [
        "utils/html-utils.js",
        "print-format.js"
      ],
      "css": ["print-format.css"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "matches":["*://coramdeoacademy.myschoolapp.com/*"],
      "resources": ["visible.png", "visible-off.png"]
    }
  ],
  "permissions": [ "storage" ]
}